<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CinemaRafael | <%= title %></title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500&family=Poppins:wght@700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header id="header">
      <h1 id="logo">
        Cinema
        <span>Rafael</span>
      </h1>
      <a href="/new" class="button">Adicionar Filme</a>
    </header>
    <main>
      <% docs.forEach(function(filme){ %>
      <section class="container">
        <div class="card">
          <div class="wrap">
            <a href="/edit/<%= filme._id %>">
              <img
                src="<%= filme.imagem %>"
                alt="Poster do filme"
                id="poster"
              />
            </a>
            <a href="/delete/<%= filme._id %>" class="button delete">
              Deletar
            </a>
          </div>
          <div class="description">
            <h3 id="title"><%= filme.titulo %></h3>
            <p id="synopsis"><%= filme.sinopse %></p>
            <p id="metadata">
              <span id="time"><%= filme.duracao %> min</span>
              <span id="pipe">|</span>
              <span id="release">Lan√ßamento: <%= filme.dataLancamento %></span>
            </p>
            <p id="category">
              <span><%= filme.categorias[0] %></span>
              <span><%= filme.categorias[1] %></span>
              <span><%= filme.categorias[2] %></span>
            </p>
          </div>
        </div>
        <img
          src="<%= filme.fundo %>"
          alt="Fundo com imagem do filme"
          id="background"
        />
      </section>
      <% }) %>
    </main>
  </body>
</html>
